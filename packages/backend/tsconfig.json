{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "outDir": "./dist"
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts", "src/types/*.d.ts"]
}
